 <h1>Books</h1>

<table  border="1">
  <tr>
  	<th>Title</th><th>Body</th><th> </th><th> </th><th> </th>
  </tr>

 <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', todolist_path(book.id) %></td>
    <td><%= link_to 'Edit', edit_todolist_path(book.id) %></td>
    <td><%= link_to 'Destroy', destroy_todolist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
 <% end %>

</table>


<h2>New book</h2>
<%= form_for(@book, url: '/todolists') do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
